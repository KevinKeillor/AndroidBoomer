<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#303033"
              android:gravity="center_horizontal"
              android:padding="15dp" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <ImageView
                android:id="@+id/movieImg"
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.88"
                android:background="#FFFFFF"
                android:layout_gravity="center" />

        <TextView
                android:id="@+id/movieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.64"
                android:gravity="left"
                android:text="Title"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />


        <SeekBar
                android:id="@+id/seekBar"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.80" >

            <TableRow
                    android:id="@+id/tableRow1"
                    android:padding="5dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                <ImageButton
                        android:id="@+id/reversemovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="ReverseClick"
                        android:src="@drawable/fastback" />

                <ImageButton
                        android:id="@+id/playpausemovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="PlayPauseClick"
                        android:src="@drawable/play" />

                <ImageButton
                        android:id="@+id/forwardmovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="ForwardClick"
                        android:src="@drawable/fastfwd" />

            </TableRow>

            <TableRow
                    android:id="@+id/tableRow2"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" >

                <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/stop" />

                <ImageButton
                        android:id="@+id/stopmovie"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="StopClick"
                        android:src="@drawable/stop" />
                <ImageButton
                        android:id="@+id/imageButton5"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/stop" />

            </TableRow>

        </TableLayout>

    </LinearLayout>
</LinearLayout>