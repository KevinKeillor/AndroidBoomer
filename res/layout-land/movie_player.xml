<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#303033"
              android:gravity="center_horizontal"
              android:padding="0dp" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="Title"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:max="100"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:baselineAligned="false"
            android:orientation="horizontal" >
        
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="1dp" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                    <ImageButton
                        android:id="@+id/playpausemovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="UpClick"
                        android:src="@drawable/up" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="1dp" >

                    <ImageButton
                        android:id="@+id/LeftNavigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="LeftClick"
                        android:src="@drawable/left" />

                    <ImageButton
                        android:id="@+id/SelectNavigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="SelectClick"
                        android:src="@drawable/stop" />

                    <ImageButton
                        android:id="@+id/RightNavigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="RightClick"
                        android:src="@drawable/right" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="1dp" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                    <ImageButton
                        android:id="@+id/stopmovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="DownClick"
                        android:src="@drawable/down" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp" />
                </TableRow>
            </TableLayout>
                        

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="1dp" >

                    <ImageButton
                        android:id="@+id/reversemovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="ReverseClick"
                        android:src="@drawable/fastback" />

                    <ImageButton
                        android:id="@+id/playpausemovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="PlayPauseClick"
                        android:src="@drawable/pause" />

                    <ImageButton
                        android:id="@+id/forwardmovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="ForwardClick"
                        android:src="@drawable/fastfwd" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="1dp" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp" />

                    <ImageButton
                        android:id="@+id/stopmovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="StopClick"
                        android:src="@drawable/stop" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>